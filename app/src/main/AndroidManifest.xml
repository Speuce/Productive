<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.productive6.productive">

    <application
        android:name=".ui.ProductiveApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Productive">
        <activity
            android:name=".ui.stats.StatsActivity"
            android:label="My Productivity">
        </activity>
        <activity
            android:name=".ui.inventory.InventoryActivity"
            android:label="My Inventory">
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.title.TitleSelection"
            android:label="Select Title">
        </activity>
        <activity
            android:name=".ui.shop.ShopActivity"
            android:label="Treat Yourself">
        </activity>

        <receiver
            android:name=".ui.notifications.MyAlarmReceiver"
            android:process=":remote" >
        </receiver>

    </application>

</manifest>