<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_blue"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/userInfoBG"
        android:layout_width="340dp"
        android:layout_height="125dp"
        android:src="@drawable/bg_rounded_corners_smoke_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />


    <Button
        android:id="@+id/inventoryButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit"
        android:text="@string/inventory"
        android:textAlignment="textStart"
        app:backgroundTint="@color/smoke_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321" />

    <TextView
        android:id="@+id/level_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:textAlignment="center"
        android:textColor="@color/smoke_black"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/experience_bar"
        app:layout_constraintEnd_toEndOf="@+id/experience_bar"
        app:layout_constraintStart_toStartOf="@+id/experience_bar"
        app:layout_constraintTop_toTopOf="@+id/experience_bar"
        app:layout_constraintVertical_bias="0.476" />

    <ProgressBar
        android:id="@+id/experience_bar"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/experiencebar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:text="@string/titles"
        android:textColor="@color/pastel_red"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/userInfoBG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/experience_bar"
        app:layout_constraintTop_toTopOf="@+id/userInfoBG"
        app:layout_constraintVertical_bias="0.295" />

    <TextView
        android:id="@+id/coin_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:text="@string/coins"
        android:textColor="@color/smoke_black"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/userInfoBG"
        app:layout_constraintStart_toEndOf="@+id/coin_icon"
        app:layout_constraintTop_toTopOf="@+id/userInfoBG"
        app:layout_constraintVertical_bias="0.67" />

    <ImageView
        android:id="@+id/coin_icon"
        android:layout_width="30dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/userInfoBG"
        app:layout_constraintEnd_toEndOf="@+id/userInfoBG"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="@+id/userInfoBG"
        app:layout_constraintTop_toTopOf="@+id/userInfoBG"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/ic_coin" />

    <Button
        android:id="@+id/selectTitle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_border_black"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/userInfoBG"
        app:layout_constraintStart_toEndOf="@+id/user_title"
        app:layout_constraintTop_toTopOf="@+id/userInfoBG"
        app:layout_constraintVertical_bias="0.31" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="19dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@+id/selectTitle"
        app:layout_constraintEnd_toEndOf="@+id/selectTitle"
        app:layout_constraintStart_toStartOf="@+id/selectTitle"
        app:layout_constraintTop_toTopOf="@+id/selectTitle" />

    <Button
        android:id="@+id/shopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_corners_smoke_black"
        android:textColor="@color/pastel_red"
        android:text="SHOP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>